{
    "name": "bxh-ai-plugin",
    "version": "1.0.41",
    "description": "Baoxiaohe AI Plugin",
    "main": "main.js",
    "private": true,
    "scripts": {
        "start": "electron .",
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "electron-builder",
        "electron:build-win": "electron-builder",
        "electron:build": "electron-builder",
        "dist": "electron-builder -p always",
        "publish:win:setup": "electron-builder -w=nsis --x64 -p always",
        "publish:mac:dmg": "electron-builder -m=dmg -p always"
    },
    "electronDownload": {
        "mirror": "https://npm.taobao.org/mirrors/electron/"
    },
    "build": {
        "appId": "com.baoxiaohe.aiplugin",
        "productName": "包小盒设计助手AI插件",
        "afterSign": "electron-builder-notarize",
        "win": {
            "icon": "build/logo.png",
            "target": [
                "nsis"
            ]
        },
        "publish": [
            {
              "provider": "github"
            }
        ],
        "mac": {
            "icon": "build/logo.png",
            "target": [
                "dmg"
            ],
            "artifactName": "${productName}_${version}.${ext}",
            "hardenedRuntime": true,
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.plist",
            "provisioningProfile": "build/baoxiaohe-aiplugin.provisionprofile"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowToChangeInstallationDirectory": true
        }
    },
    "dependencies": {
        "adm-zip": "^0.5.9",
        "axios": "^0.27.2",
        "electron-updater": "^5.0.1"
    },
    "devDependencies": {
        "electron": "^19.0.3",
        "electron-builder": "^23.0.3",
        "electron-builder-notarize": "^1.2.0"
    },
    "author": "bxh",
    "license": "ISC"
}
