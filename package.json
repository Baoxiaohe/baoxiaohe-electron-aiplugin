{
    "name": "electronjs",
    "version": "1.0.8",
    "description": "my awesome electron-app",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "electron-builder",
        "publish:win:setup": "electron-builder -w=nsis --x64 -p always",
        "publish:mac:dmg": "electron-builder -m=dmg -p always", 
        "publish:linux:deb": "electron-builder -l=deb --x64 -p always"
    },
    "electronDownload": {
        "mirror": "https://npm.taobao.org/mirrors/electron/"
    },
    "build": {
        "appId": "com.baoxiaohe.aiPlugins",
        "productName": "ai-plugins",
        "win": {
            "icon": "build/favicon.ico",
            "target": [
                "nsis"
            ]
        },
        "publish": [
            {
                "provider": "github"
            }
        ],
        "mac": {
            "icon": "build/favicon.ico",
            "target": [
                "dmg"
            ],
            "extraResources": [
                "zw/index.html"
            ],
            "hardenedRuntime": false
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowToChangeInstallationDirectory": true
        }
    },
    "dependencies": {
        "adm-zip": "^0.5.9",
        "electron-updater": "^5.0.1"
    },
    "devDependencies": {
        "electron": "^19.0.3",
        "electron-builder": "^23.0.3"
    },
    "author": "zhy",
    "license": "ISC"
}
